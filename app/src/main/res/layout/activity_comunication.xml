<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/remote_bg">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="?attr/actionBarSize"
            app:menu="@menu/topbar"
            app:popupTheme="@style/Theme.TitleBar.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="180dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/forward_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/remote_topbtn">
            </ImageButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/left_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/remote_leftbtn"
                    android:layout_marginRight="86dp">
                </ImageButton>

                <ImageButton
                    android:id="@+id/right_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/remote_rigthbtn">
                </ImageButton>

            </LinearLayout>

            <ImageButton
                android:id="@+id/backward_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/remote_bottombtn">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/Inright_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/remote_lbtn">
            </ImageButton>

            <ImageButton
                android:id="@+id/Inleft_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="140dp"
                android:background="@drawable/remote_rbtn">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/control_button"
                android:layout_width="242dp"
                android:layout_height="50dp"
                android:background="@drawable/solid_btn"
                android:text="수동 조작"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold">
            </Button>

            <Button
                android:id="@+id/auto_button"
                android:layout_width="242dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/solid_btn"
                android:text="자율 주행"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>